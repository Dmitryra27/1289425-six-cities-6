{
  "name": "six-cities",
  "version": "5.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "start:dev": "npm run clean && npm run compile && chmod u+x ./dist/main.cli.js",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "mock:server": "json-server ./src/mock/mock-server-data.json --port 3123",
    "cli": "npm run ts -- ./src/main.cli.ts"

  },
  "devDependencies": {
    "@types/node": "18.17.17",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2",
    "json-server": "1.0.0-alpha.21",
    "pino-pretty": "10.2.0",
    "tslib": "2.6.2"

  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "got": "13.0.0",
    "dayjs": "1.11.10",
    "glob": "10.3.10",
    "inversify": "6.0.1",
    "pino": "8.15.1"
  }
}
